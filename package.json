{
  "type": "module",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "bootstrap": "npm install --workspaces",
    "start:server:dev": "npm --workspace ./server run dev",
    "git-setup": "git branch -M main && git push -u origin main && git config push.default simple",
    "start": "npm --workspaces run start",
    "start:server": "npm --workspace ./server run start",
    "start:client": "npm --workspace ./client run start"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "mongoose": "^0.0.1-security"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}

